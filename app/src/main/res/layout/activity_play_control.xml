<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <include layout="@layout/action_bar"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:id="@+id/linearLayout">

            <Button
                android:id="@+id/btn_add_favorite_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#dbfffa"
                android:text="@string/add_book_to_favorite" />


            <Button
                android:id="@+id/btn_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#dbfffa"
                android:text="@string/play" />


            <Button
                android:id="@+id/btn_pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#dbfffa"
                android:text="@string/pause" />

            <Button
                android:id="@+id/btn_replay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#dbfffa"
                android:text="@string/stop" />

            <Button
                android:id="@+id/btn_backward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dbfffa"
                android:layout_marginTop="10dp"
                android:text="@string/backward" />

            <Button
                android:id="@+id/btn_ffw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#dbfffa"
                android:text="@string/forward" />

            <Button
                android:id="@+id/btn_previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dbfffa"
                android:layout_marginTop="10dp"
                android:text="@string/previousChapter"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dbfffa"
                android:layout_marginTop="10dp"
                android:text="@string/nextChapter"
                android:visibility="visible"/>




            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="visible">
                <TextView
                    android:id="@+id/text_current_duration_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:text="@string/time" />

                <TextView
                    android:id="@+id/text_total_duration_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="end"
                    android:text="@string/time" />
            </LinearLayout>
<!--            <include layout="@layout/custom_list"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>-->
        </LinearLayout>


</RelativeLayout>
